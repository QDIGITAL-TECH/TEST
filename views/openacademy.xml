<?xml version="1.0" encoding="UTF-8"?>

<odoo>
            <openerp>
                <data  noupdate="1">
                    <record id="cashadvance_seq" model="ir.sequence">
                    <field name="name">No_PD</field>
                    <field name="padding">4</field>
                    <field name="code">openacademy.ticket</field>
                    <field name="prefix">T#</field>
                    </record>
                </data>
            </openerp>
        <record model='ir.ui.view' id='ticket_form_view'>
            <field name='name'>ticket.form</field>
            <field name='model'>openacademy.ticket</field>
            <field name='arch' type='xml'>
                <form string="Ticket Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="summary"/>
                            <field name='ticket_num'/>
                            <field name='created_by'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="ticket_list_action">
            <field name="name">Tickets</field>
            <field name="res_model">openacademy.ticket</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first ticket
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="job_list_action">
            <field name="name">Jobs</field>
            <field name="res_model">openacademy.job</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first job
                </p>
            </field>
        </record>

        <!-- top level menu: no parent -->
        <menuitem id="main_openacademy_menu" name="Open Academy"/>
        <!-- A first level in the left side menu is needed
             before using action= attribute -->
        <menuitem id="openacademy_menu" name="Open Academy"
                  parent="main_openacademy_menu"/>
        <!-- the following menuitem should appear *after*
             its parent openacademy_menu and *after* its
             action ticket_list_action -->
        <menuitem id="tickets_menu" name="Tickets" parent="openacademy_menu"
                  action="ticket_list_action"/>
        <menuitem id="jobs_menu" name="Jobs" parent="openacademy_menu"
                  action="job_list_action"/>
        <!-- Full id location:
             action="openacademy.ticket_list_action"
             It is not required when it is the same module -->

</odoo>